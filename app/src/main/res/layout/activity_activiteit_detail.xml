<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hogent.ti3g05.ti3_g05_joetzapp.activiteit_detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uitloggen"
            android:id="@+id/btnUitloggen"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/btnUitloggen"
        android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/btnUitloggen"
        android:layout_toEndOf="@+id/imageButton" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/btnUitloggen"
        android:layout_toEndOf="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zomerkamp Oostende"
        android:id="@+id/txtTitelKamp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Oostende - 14/05/2015"
            android:id="@+id/txtDatumKamp"
            android:layout_alignTop="@+id/txtTitelKamp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hier komt de beschrijving van het kamp."
            android:id="@+id/txtBeschrijving"
            android:layout_below="@+id/txtDatumKamp"
            android:layout_marginTop="50px" />
    </RelativeLayout>
</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ga terug"
        android:id="@+id/btnGaTrg"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inschrijven"
        android:id="@+id/btnInschrijven"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/scrollView" />



</RelativeLayout>
